

<div class="container">
    <div class="col-lg-6">

        <h1>{{article.title}}</h1>
        <h5> - <i>{{author}}</i></h5>
        <p>{{article.body}}</p>

         {{#if user.id==article.author}}
        <button onclick="window.location='/articles/edit/{{article._id}}' "href="" class="btn btn-default">Edit</button>
        <button data-id="{{article._id}}" class="btn btn-danger delete-article">Delete</button>
         {{/if}}
        </div>
        </div>
